{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "dist/es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@angular/**/*"
  ]
}
